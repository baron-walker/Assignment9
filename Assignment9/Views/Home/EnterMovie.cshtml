@model EnterMovie
<!-- Form for entering new movie data -->
<form asp-action="EnterMovie" method="post">
  
    <div >
        <label asp-for="Category">Category:</label>
        <input class="form-control" asp-for="Category" required />
    </div>

    <div >
        <label asp-for="Title">Title:</label>
        <input class="form-control" asp-for="Title" required />
    </div>

    <div class="">
        <label asp-for="Year">Year:</label>
        <input class="form-control" asp-for="Year" required />
    </div>

    <div class="">
        <label asp-for="Director">Director:</label>
        <input class="form-control" asp-for="Director" required />
    </div>

    <div >
        <label asp-for="Rating">Rating:</label>
        <select class="form-control" asp-for="Rating" required>
            <option value="">Select One rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div >
        <label asp-for="Edited">Was this film edited?</label>
        <select class="form-control" asp-for="Edited">
            <option value="">Select One</option>
            <option value="True">Yes</option>
            <option  value="False">No</option>
        </select>
    </div>

    <div >
        <label asp-for="LentTo">Lent To:</label>
        <input class="form-control" asp-for="LentTo" />
    </div>

    <div >
        <label asp-for="Notes">Notes:</label>
        <input class="form-control" asp-for="Notes" />
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Submit your movie</button>
</form>

